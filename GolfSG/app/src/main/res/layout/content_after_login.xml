<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/barLayout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity = "center"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/app_name"
                android:textSize="25sp"
                android:gravity = "center_vertical"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp"
                android:id="@+id/toolbar_title" />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <Button
        android:id="@+id/gotToListOfRounds"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="List of Rounds"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:onClick="goToListOfRounds"/>

    <Button
        android:id="@+id/gotToNewRound"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="New Round"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:onClick="goToNewRound"/>

    <Button
        android:id="@+id/gotToLeagues"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Leagues"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:onClick="goToLeagues"/>

    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Logout"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:onClick="Logout"/>






</LinearLayout>