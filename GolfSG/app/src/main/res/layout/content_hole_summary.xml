<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/sky_background">

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/hole_summary_header"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/summary_hole_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TableLayout
            android:id= "@+id/tablelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"></TableLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="GO_TO_NEXT_HOLE"
            android:onClick="returnToMain"  />

        <Button
            android:id="@+id/endRound"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="END_ROUND"
            android:onClick="endRound"  />

    </LinearLayout>


