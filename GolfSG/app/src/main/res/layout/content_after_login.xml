<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <Button
        android:id="@+id/gotToListOfRounds"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="List of Rounds"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:onClick="goToListOfRounds"/>

    <Button
        android:id="@+id/gotToNewRound"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="New Round"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:onClick="goToNewRound"/>

    <Button
        android:id="@+id/gotToLeagues"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Leagues"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:onClick="goToLeagues"/>

    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Logout"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:onClick="Logout"/>






</LinearLayout>