<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.redballgolf.golfSG">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".SQLite.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login.LoginRegisterOption"
            android:label="@string/title_activity_login_register_option"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Register.Register"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".leagues.IndividualLeague"
            android:label="@string/title_activity_individual_league"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".leagues.LeaguesMenu"
            android:label="@string/title_activity_leagues_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Login.Login"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Login.ForgotLoginDetails"
            android:label="@string/forgotLoginDetails"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Login.AfterLogin"
            android:label="@string/title_activity_after_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Common.BaseActivity"
            android:label="@string/title_activity_base"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RoundOfGolf.NewRound"
            android:label="@string/title_activity_new_round"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RoundOfGolf.ShotInputScreen"
            android:label="@string/title_activity_shot_input_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Common.SplashScreen"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RoundOfGolf.holeSummary"
            android:label="@string/title_activity_hole_summary"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>